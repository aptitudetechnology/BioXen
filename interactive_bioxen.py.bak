    def initialize_hypervisor(self):
        """Initialize the BioXen hypervisor with user configuration."""
        print(f"\nüñ•Ô∏è  Initializing BioXen Hypervisor with {self.chassis_type.value.title()} Chassis")
        print("=" * 60)
        
        # Get hypervisor configuration
        max_vms = questionary.text(
            "Maximum number of VMs (default: 4):",
            default="4"
        ).ask()
        
        # Show chassis-specific information
        if self.chassis_type == ChassisType.ECOLI:
            default_ribosomes = "80"
            print("ü¶† E. coli chassis: prokaryotic, single compartment")
        elif self.chassis_type == ChassisType.YEAST:
            default_ribosomes = "200000"
            print("üçÑ Yeast chassis: eukaryotic, nuclear + organelles (PLACEHOLDER)")
        else:
            default_ribosomes = "80"
        
        # For chassis-based hypervisor, we don't directly specify ribosomes
        # as they're determined by the chassis capabilities
        confirm_chassis = questionary.confirm(
            f"Initialize hypervisor with {self.chassis_type.value} chassis?"
        ).ask()
        
        if not confirm_chassis:
            print("‚ùå Hypervisor initialization cancelled")
            return
        
        try:
            max_vms = int(max_vms)
            
            # Initialize hypervisor with chassis
            self.hypervisor = BioXenHypervisor(
                max_vms=max_vms,
                chassis_type=self.chassis_type
            )
            
            # Get chassis info
            chassis_info = self.hypervisor.get_chassis_info()
            capabilities = self.hypervisor.chassis.get_capabilities()
            
            print(f"‚úÖ Hypervisor initialized successfully!")
            print(f"   üîß Chassis: {self.chassis_type.value}")
            print(f"   üñ•Ô∏è  Max VMs: {max_vms}")
            print(f"   üß¨ Ribosomes: {capabilities.max_ribosomes}")
            print(f"   üíæ Memory Architecture: {capabilities.memory_architecture}")
            print(f"   üî¨ Organelles: {'Yes' if capabilities.has_nucleus else 'No'}")
            if self.chassis_type == ChassisType.YEAST:
                print("   ‚ö†Ô∏è  Note: Yeast chassis is a PLACEHOLDER implementation")
            print(f"   üìä Status: Ready")
            
            questionary.press_any_key_to_continue().ask()
            
        except ValueError as e:
            print(f"‚ùå Invalid configuration: {e}")
        except RuntimeError as e:
            print(f"‚ùå Failed to initialize hypervisor: {e}")
            if "yeast" in str(e).lower():
